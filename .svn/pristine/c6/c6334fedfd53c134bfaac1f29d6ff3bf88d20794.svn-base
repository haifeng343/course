.Img{
  width: 100%;
  height: 100%;
}
.poster-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
}
.poster-content{
  z-index: 11;
  width: 600rpx;
  height: 800rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.poster-around{
  width: 100%;
  display: flex;
  justify-content: space-around;
  position: relative;
  top: 40rpx;
  color: #000;
  font-size: 28rpx;
}
.poster-Img{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.downFile{
  width: 200rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 10rpx 0;
  border-radius: 35rpx;
}