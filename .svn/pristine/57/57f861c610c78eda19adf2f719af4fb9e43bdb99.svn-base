page{
  background-color: #fff;
}
.vipContent{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  font-size: 24rpx;
  position: relative;
}
.vipItem{
  width: 50%;
  text-align: center;
}
.vipInterItem{
  width: 98%;
  margin: 30rpx auto 0;
}
.vipText{
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.btn{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #29D9D5;
  border-radius: 15rpx;
  margin-top: 20rpx;
}
.zan-dialog__container{
  padding: 20rpx;
}
.zan-dialog__container{
  position: fixed;
  width: 650rpx;
  height: 270rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.success{
  width: 100rpx;
  height: 100rpx;
}
.vipItem:first-child:after{
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 4rpx;
  height: 70rpx;
  background-color: #F8E1C3;
}
.vipNumber{
  font-size: 36rpx;
}
.content{
  width: 100%;
  height: 200rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  text-align: left;
}
.zan-dialog__container1 {
  position: fixed;
  text-align: center;
  width: 650rpx;
  height: 410rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  z-index: 12;
  border-radius: 20rpx;
}

.vipPayList{
  width:100%;
  height:auto;
  overflow-y:hidden;
  box-sizing:border-box;
  background-color:#fff;
  white-space:nowrap;
}
.vipList{
  overflow-x: hidden;
}
.vipCard {
  width:90%;
  height:auto;
  overflow-y:hidden;
  padding: 30rpx 5%;
}

.vipCard::-webkit-scrollbar {
  width: 0;
  height: 0; 
  color: transparent;
}

.vipCardItem {
  width: 28%;
  height: 220rpx;
  border-radius: 15rpx;
  border: 1rpx solid #F4F4F4;
  display: inline-block;
  margin-right: 50rpx;
  text-align: center;
  white-space: nowrap;
  z-index: 999;
}
.vipCardItem:last-child{
  margin-right: 2rpx;
}
.vipCardItem.active{
  background-color: rgb(248, 248, 233)!important;
  border-color: rgb(245, 232, 212)!important;
}
.vipIcon1{
  width: 34rpx;
  height: 34rpx;
  margin-left: 5rpx;
}
.vipCardName{
  font-size: 28rpx;
  color: #333844; 
  line-height: 100rpx;
  overflow: hidden;
}
.vipCardMoney{
  color: red;
  font-size: 36rpx;
}
.vipCardMoney .fuhao{
  font-size: 24rpx;
}
.vipCardOldMoney{
  color: #B2AEAB;
  text-decoration: line-through;
  font-size: 24rpx;
}
.vipInterests{
  font-size: 32rpx;
  padding-left: 5%;
}

.pay{
  height: 100rpx;
}
