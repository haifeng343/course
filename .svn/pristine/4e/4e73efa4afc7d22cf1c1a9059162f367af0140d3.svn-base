page{
  padding-bottom: 120rpx;
}
.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
  z-index: 0;
  background-color: #fff;
}
swiper {
  height: 100%;
}

swiper-item {
  text-align: center;
}

swiper-item image {
  width: 660rpx;
  object-fit: cover;
  border-radius: 10rpx;
}

.box {
  width: 95%;
  height: 100%;
  display: inline-block;
  box-sizing: border-box;
}

.dot {
  position: absolute;
  bottom: 60rpx;
  right: 70rpx;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 24rpx;
  border-radius: 40rpx;
  padding: 3rpx 20rpx;
}

.content {
  background-color: #fff;
  width: 90%;
  padding: 10rpx 5% 10rpx;
}

.content .title {
  font-size: 32rpx;
  font-weight: 600;
}

.contents {
  display: flex;
  justify-content: space-between;
}

.money {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  font-size: 30rpx;
  color: #e51b1a;
}

.sym {
  position: relative;
  top: 7rpx;
}

.money .number {
  font-size: 36rpx;
}

.contents .time {
  font-size: 26rpx;
  color: #8d8d8d;
  line-height: 50rpx;
}

.courseList {
  background-color: #fff;
  width: 100%;
  height: auto;
  padding: 0 5%;
  box-sizing: border-box;
}

.courseItem {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #fbfbfb;
}
.courseItem:last-child{
  border-bottom: none;
}
.courseItem .title {
  text-align: center;
  color: #8d8d8d;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 40rpx 0;
}

.title .heng {
  width: 60rpx;
  height: 3rpx;
  background: #8d8d8d;
  position: relative;
  top: 22rpx;
}

.title .heng:first-child {
  margin-right: 30rpx;
}

.title .heng:last-child {
  margin-left: 30rpx;
}

.courseCont {
  width: 100%;
  height: auto;
  padding-right: 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.leftImg {
  width: 33%;
  height: auto;
  overflow: hidden;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.cover {
  width: 210rpx;
}

.rightContent {
  width: 67%;
}

.courseTitle {
  font-size: 28rpx;
  font-weight: 600;
}

.coursePeople {
  font-size: 24rpx;
  color: #8d8d8d;
  line-height: 40rpx;
}

.tagList {
  width: 100%;
  overflow-x: scroll;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.tagList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tagItm {
  word-break: keep-all;
  font-size: 24rpx;
  padding: 2rpx 8rpx;
  margin-right: 15rpx;
  margin-top: 0rpx;
  box-sizing: border-box;
}

.detail {
  display: flex;
  justify-content: flex-start;
}

.detailImg {
  width: 30rpx;
  position: relative;
  top: 6rpx;
  display: flex;
  right: 5rpx;
  justify-content: flex-start;
}

.name {
  font-size: 24rpx;
  color: #767676;
  line-height: 40rpx;
}

.addrLong {
  width: 80%;
  display: flex;
  justify-content: flex-start;
}

.long {
  width: 20%;
  color:#8d8d8d;
  text-align: right;
}

.around {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.address {
  width: 90%;
  word-break: keep-all;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #404040;
}
.ring{
  display: flex;
  justify-content: flex-start;
  margin-right: 25rpx;
}
.disclaimerList{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 15rpx;
}
.disTitle{
  font-size: 32rpx;
  font-weight: 700;
  padding-top: 30rpx;
  margin-left: 5%;
}
.disContent{
  width: 90%;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-left: 5%;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
.pay{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  background: #fff;
  box-shadow: 0 -8rpx 15rpx rgba(0, 0, 0, 0.1);
  justify-content: flex-end;
  text-align: right;
}
.payBtn{
  position: absolute;
  top: 25rpx;
  right: 50rpx;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #29D9D6;
  color: #fff;
  border-radius: 40rpx;
}






