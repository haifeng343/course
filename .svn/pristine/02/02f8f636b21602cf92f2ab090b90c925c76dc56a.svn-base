.bgImg{
  width: 100%;
  height: 100%;
  margin-bottom: 100rpx;
}

.success {
  width: 100rpx;
  height: 100rpx;
}
.btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #29d9d5;
  border-radius: 15rpx;
  margin-top: 20rpx;
}
.zan-dialog__container {
  position: fixed;
  text-align: center;
  width: 650rpx;
  height: 320rpx;
  box-sizing: border-box;
  padding: 20rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  z-index: 12;
  border-radius: 20rpx;
}