page{
  background-color: #fff;
}
.vipContent{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  font-size: 24rpx;
  position: relative;
}
.vipItem{
  width: 50%;
  text-align: center;
}
.vipItem:first-child:after{
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 4rpx;
  height: 70rpx;
  background-color: #F8E1C3;
}
.vipNumber{
  font-size: 36rpx;
}
.vipCard{
  width: 90%;
  height: auto;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.vipCardItem{
  width: 28%;
  height: 220rpx;
  border-radius: 15rpx;
  border: 1rpx solid #F4F4F4;
  display: flex;
  text-align: center;
  flex-direction: column;
}
.vipCardItem.active{
  background-color: #FFFCF7!important;
  border-color: #F8EEDE!important;
}
.vipCardName{
  font-size: 28rpx;
  color: #333844; 
  line-height: 100rpx;
}
.vipCardMoney{
  color: red;
  font-size: 36rpx;
}
.vipCardMoney .fuhao{
  font-size: 24rpx;
}
.vipCardOldMoney{
  color: #B2AEAB;
  text-decoration: line-through;
  font-size: 24rpx;
}
.vipInterests{
  font-size: 32rpx;
  padding-left: 5%;
}
.vipList{
  width: 90%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}
.vipInterItem{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
}
.vipItenIcon{
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.lastItem{
  margin-bottom: 20rpx;
}
.pay{
  height: 100rpx;
}
.btn{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 45rpx;
  font-size: 28rpx;
  color: #F8E1C3;
  margin:15rpx auto;
  text-align: center;
  background-color: #333844;
}
.vipItemTitlte{
  width: 60%;
  font-size: 28rpx;
}
.w75{
  width: 75%;
}
.vipItemContent{
  font-size: 24rpx;
  margin-top: 20rpx;
}