<view class='banner'>
  <swiper bindanimationfinish="swiperChange" indicatorDots='{{indicatorDots}}' current='{{current}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' circular='{{circular}}' display-multiple-items='1' next-margin='35rpx' previous-margin='35rpx'>
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <view class='box'>
          <image class='img1' src='{{item}}' mode="scaleToFill" lazy-load="true"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="dots">
    <block wx:for="{{imgUrls}}" wx:key>
      <view class="dot{{index == currentSwiper ? ' active' : ''}}">{{current+1}}/{{imgUrls.length}}</view>
    </block>
  </view>
</view>
<view class='courseCont'>
  <view class='between well courseLi'>
    <view class='name'>{{List.ItemName}}</view>
    <!-- <view class='howMoney'>￥{{Price}}</view> -->
  </view>
  <view class='somebody well'>
    {{List.ItemDes==null?'暂无课程简介':List.ItemDes}}
  </view>
  <view class='courseRow startd well'>
    <view class='center'>
      <image class='rowImg' src='../../images/house.png' mode='widthFix' lazy-load='true'></image>
    </view>
    <view>{{List.SellerName}}</view>
  </view>
  <view class='courseRow between well'>
    <view class='startd'>
      <view class='center'>
        <image class='rowImg' src='../../images/ad1.png' mode='widthFix' lazy-load='true'></image>
      </view>
      <view class='address'>{{List.StoreAddress}}</view>
    </view>
    <!-- <view class='end'>{{List.Distance}}km</view> -->
  </view>
  <button class='courseRow startd well' bindtap='callPhone' wx:if="{{mobile}}">
    <view class='center'>
      <image class='rowImg' src='../../images/call.png' mode='widthFix' lazy-load='true'></image>
    </view>
    <view>{{mobile}}</view>
  </button>
  <view class='courseRow startd well'>
    <view class='startd'>
      <view class='center'>
        <image class='rowImg' src='../../images/couse.png' mode='widthFix' lazy-load='true'></image>
      </view>
      <view>共有 {{List.CoursesNumber}} 节课</view>
    </view>
    <view class='startd ml40'>
      <view class='center'>
        <image class='rowImg' src='../../images/time.png' mode='widthFix' lazy-load='true'></image>
      </view>
      <view> {{List.SingleTime}} min/课时</view>
    </view>
  </view>
</view>
<view class='teacherList boxd' wx:if="{{!List.TeacherCount==0}}" bindtap='allTeacher' data-Id="{{List.RelId}}">
  <view class='tearcherTitle between'>
    <view class='teaNumber'>师资力量 ({{List.TeacherCount}})</view>
    <image src='../../images/go.png' class='go' mode='widthFix' lazy-load='true'></image>
  </view>
  <view class='teaList'>
    <view class='teachers' wx:for="{{teaList}}" wx:key>
      <image class='teaImg' src='{{item.HeadUrl}}' mode='aspectFill' lazy-load='true'></image>
      <view class='teaName'>{{item.Name}}</view>
      <!-- <view class='profession'>{{item.Honor}}</view>
      <view class='profession'>{{item.TeachingAge}}</view> -->
    </view>
  </view>
</view>
<view class='prompt boxd' wx:for="{{List.OtherList}}" wx:key>
  <view class='prompTitle'>{{item.Title}}</view>
  <view class='promptText'>
    <rich-text nodes="{{item.Content}}"></rich-text>
  </view>
</view>