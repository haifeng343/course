.recommendation{
  width: 90%;
  margin:20rpx 5%;
  height: auto;
}
.Input{
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #EAEAEA;
  background: #fff;
  padding-left: 30rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.prompt{
  font-size: 24rpx;
  color: #6F6F6F;
  height: 80rpx;
  line-height: 80rpx;
}
.sure{
  width: 100%;
  background-color: #29D9D6;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 45rpx;
}

.nickname_frame{
  display: flex;
  justify-content:flex-start;
  align-items: center;
}

.account_info_text {
  line-height: 50rpx;
  font-size: 28rpx;
  color: #5b5b5b;
}

.prefix_width {
  text-align: right;
  margin-right: 15rpx;
  width: 18%;
}

.nickname_logo{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.remark{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #D3D3D3;
}


