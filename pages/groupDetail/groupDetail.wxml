<view class='banner'>
  <swiper bindchange="swiperChangeTo" bindanimationfinish="swiperChange" indicatorDots='{{indicatorDots}}' current='{{current}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' circular='{{circular}}' display-multiple-items='1' next-margin='35rpx' previous-margin='35rpx'>
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <view class='box'>
          <image src='{{item}}' mode="widthFix" lazy-load="true"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="dots">
    <block wx:for="{{imgUrls}}" wx:key>
      <view class="dot{{index == currentSwiper ? ' active' : ''}}">{{current+1}}/{{imgUrls.length}}</view>
    </block>
  </view>
</view>
<view class='content'>
  <view class='title'>{{detailCent.SheetName}}</view>
  <view class='contents'>
    <view class='time'>活动截止时间：{{detailCent.EndTime}}</view>
    <view class='money'>
      <view class='sym'>￥</view>
      <view class='number'>{{detailCent.SheetPrice}}</view>
    </view>
  </view>
</view>
<view class='courseList'>
  <view class='courseItem' wx:for='{{GroupList}}' wx:key>
    <view class='title'>
      <view class='heng'></view> {{item.GroupName}}({{text}})
      <view class='heng'></view>
    </view>
    <view class='courseCont' wx:for="{{item.ItemList}}" wx:key wx:for-item="k" data-Id="{{k.RelId}}" bindtap='courseDetail'>
        <view class='leftImg'>
          <image class='cover' src='{{k.ItemCoverImg}}' mode='widthFix' lazy-load='true'></image>
        </view>
        <view class='rightContent'>
          <view class='courseTitle'>{{k.ItemName}}</view>
          <view class='coursePeople'>{{k.SoldCount}}人已参与 | 剩余名额 {{k.RemainCount}} 个</view>
          <view class='tagList'>
            <view class='tagItm' wx:for="{{k.TagList}}" wx:key wx:for-item="b" style='background:{{b.TagBgColor}};color:{{b.TagFontColor}}'>{{b.TagName}}</view>
          </view>
          <view class='detail'>
            <image class='detailImg' src='../../images/house.png' mode='widthFix' lazy-load='true'></image>
            <view class='name'>{{k.SellerName}}</view>
          </view>
          <view class='detail around'>
            <view class='addrLong'>
              <image class='detailImg' src='../../images/ad1.png' mode='widthFix' lazy-load='true'></image>
              <view class='name address'>{{k.StoreAddress}}</view>
            </view>
            <!-- <view class='long'>{{k.Distance}}km</view> -->
          </view>
          <view class='detail'>
            <image class='detailImg' src='../../images/call.png' mode='widthFix' lazy-load='true'></image>
            <view class='name'>{{k.Mobile}}</view>
          </view>
          <view class='detail'>
            <view class='ring'>
              <image class='detailImg' src='../../images/couse.png' mode='widthFix' lazy-load='true'></image>
              <view class='name'>共有{{k.CoursesNumber}}节课</view>
            </view>
            <view class='ring'>
              <image class='detailImg' src='../../images/time.png' mode='widthFix' lazy-load='true'></image>
              <view class='name'>单节课时 {{k.SingleTime}} min</view>
            </view>
          </view>
        </view>
    </view>
  </view>
</view>
<view class='disclaimerList' wx:for="{{ExtraList}}" wx:key>
  <view class='disTitle'>{{item.Title}}</view>
  <view class='disContent'>{{item.Content}}</view>
</view>
<view class='pay'>
  <button class='payBtn' bindtap='chooseClass' data-Id="{{detailCent.SheetId}}">立即购买</button>
</view>