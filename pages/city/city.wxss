
.a-z{
  width: 35rpx;
  position: fixed;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  text-align: center;
  right: 5rpx;
  height: 480rpx;
  top:50%;
  margin-top: -240rpx;
  transform: translate(-5rpx,0%);
  color: #000;
  font-size: 30rpx;
}


.city-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 120rpx;
  background-color: #FFFFFF;
  overflow-x: hidden;
}

.city-item {
  background: #fff;
  width: 80%;  
  padding-left: 5%;
  margin-left: 5%;
  height: 90rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f9f9f9;    
}

.city-item-A-Z{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  padding-left: 10%;
  background-color: #EEEEEE;
  border-top: 1rpx solid #EEEEEE;    
  margin-top: -1rpx;
}


.search-box {
  top: 0;
  position: fixed;
  width: 100%;
  /* left:5%; */
  background: #eee;
  height: 110rpx;
  font-size: 30rpx;
  border-bottom:1rpx solid #DDDDDD; 
     /* border: 1rpx solid red;   */
}

.search-input {
  height: 70rpx;
  line-height: 60rpx;
  width: 95%;
  margin-left: 2.5%;
  border-radius: 10rpx;
  background: #fff;
  margin-top: 20rpx;
  text-align: center;
}

.search-input-placeholder {
  text-align: center;
}