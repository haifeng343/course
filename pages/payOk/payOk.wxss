.payTop{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  margin: 40rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.payok{
  width: 70rpx;
  margin-right: 30rpx;
}
.payText{
  margin-top: 6rpx;
  font-weight: 600;
}
.detail{
  width: 100%;
  background-color: #fff;
  padding: 30rpx 5%;
  box-sizing: border-box;
  font-size: 26rpx;
}
.title{
  font-size: 28rpx;
}
.code{
  width: 400rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  height: auto;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #F5F5F5;
}
.codeImg{
  width: 80%;
  padding-top: 10rpx;
  margin-left: 2.5%;
}




