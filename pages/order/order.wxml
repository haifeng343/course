<movable-area style="height:{{windowHeight-statusBarHeight}}rpx;width:100%">
  <movable-view wx:if="{{obj.CustomerServiceInfo.PositionType == 1}}" direction="{{obj.CustomerServiceInfo.IsMove==true?'vertical':'none'}}" class='moveView1' style="top:{{statusBarHeight+obj.CustomerServiceInfo.PositionHight}}rpx">
    <button open-type='contact' class='contact contact_left'>客服</button>
  </movable-view>
  <movable-view wx:if="{{obj.CustomerServiceInfo.PositionType == 2}}" direction="{{obj.CustomerServiceInfo.IsMove==true?'vertical':'none'}}" class='moveView2 ' style="top:{{statusBarHeight+obj.CustomerServiceInfo.PositionHight}}rpx">
    <button open-type='contact' class='contact contact_right'>客服</button>
  </movable-view>
  <view class="movie-container">
    <!-- 导航栏 -->
    <view class="navbar">
      <block wx:for="{{navbarTitle}}" wx:key="index">
        <view class="navbar-item {{navbarActiveIndex === index ? 'navbar-item-active' : ''}}" data-navbar-index="{{index}}" catchtap="onNavBarTap">
          <text>{{item}}</text>
        </view>
      </block>
    </view>
    <view class="movie-content-wrapper">
      <view wx:if="{{usertoken}}">
        <view>
          <view class='nohasLog' wx:if="{{modelList[navbarActiveIndex].list.length==0}}">
            <image class='noImg' src='../../images/zanwu.png' mode='widthFix' lazy-load='true'></image>
            <view>暂无订单</view>
          </view>
          <view wx:else>
            <view class='orderList'>
              <view class='orderItem' wx:for="{{modelList[navbarActiveIndex].list}}" wx:key wx:hidden='{{navbarActiveIndex == index}}'>
                <view class='title between'>
                  <view class='numbering'>订单编号:{{item.OrderSn}}</view>
                  <view class='happening' wx:if="{{item.UseStatus==1}}">未使用</view>
                  <view class='happening' wx:if="{{item.UseStatus==2}}">部分使用</view>
                  <view class='happening' wx:if="{{item.UseStatus==3}}">已完成</view>
                  <view class='happening' wx:if="{{item.UseStatus==4}}">已过期</view>
                  <view class='happening' wx:if="{{item.UseStatus==5}}">申请退款</view>
                  <view class='happening' wx:if="{{item.UseStatus==6}}">退款中</view>
                  <view class='happening red' wx:if="{{item.UseStatus==7}}">退款失败</view>
                  <view class='happening' wx:if="{{item.UseStatus==8}}">退款成功</view>
                  <view class='happening' wx:if="{{item.UseStatus==9}}">取消退款</view>
                </view>
                <view class='orderContent' data-Id="{{item.OrderId}}" data-kd="3" data-status="{{item.UseStatus}}" bindtap='orderDetail'>
                  <image class='orderImg' src='{{item.SheerCoverImg}}' mode='aspectFill' lazy-load='true'></image>
                  <view class='Right'>
                    <view class='between'>
                      <view class='name'>{{item.SheetModel==1?item.SheetName:item.TradingAreaName}}</view>
                      <view class='money'>￥{{item.PayAmount*1.0/100}}</view>
                    </view>
                    <view class='start'>
                      <view class='address'>{{item.SheetModel==1?item.TradingAreaName:item.OrderItemDes}}</view>
                    </view>
                    <view class='test'>购买时间:{{item.PayTime}}</view>
                    <view class='test' wx:if="{{item.UseStatus==1  || item.UseStatus==2 || item.UseStatus==7}}">有效期至:{{item.ExpriesTime==null?'/':item.ExpriesTime}}</view>
                    <view class='test' wx:if="{{item.UseStatus==3}}">最后使用:{{item.LastUseTime}}</view>
                    <view class='test' wx:if="{{item.UseStatus==4}}">截止日期:{{item.ExpriesTime}}</view>
                    <view class='test' wx:if="{{item.UseStatus==5 || item.UseStatus==6}}">申请日期:{{item.RefundTime}}</view>
                    <view class='test' wx:if="{{item.UseStatus==8 || item.UseStatus==9}}">退款时间:{{item.RefundTime}}</view>
                  </view>
                </view>
                <view class='bottom between'>
                  <view class='tag'>{{item.BuyType==null?'':item.BuyType}}</view>
                  <view>
                    <button class='btn' bindtap='Refund' data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==1}}">申请退款</button>
                    <button class='btn' bindtap='delete' data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==3 || item.UseStatus==4}}">删除订单</button>
                    <view class='kld'>
                      <button class='btn' bindtap='lookEor' data-item="{{item}}" wx:if="{{item.RefundFailReason==''}}" data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==7}}">查看原因</button>
                      <button class='btn' style='margin-left:15rpx' bindtap='Refund' data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==7}}">重新退款</button>
                      <button class='btn' style='margin-left:15rpx' bindtap='Refund' data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==9}}">重新退款</button>
                    </view>
                    <button class='btn' bindtap='cancelOrder' data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==5}}">取消退款</button>
                    <button class='btn' bindtap='lookDetails' data-item="{{item}}" data-Id="{{item.OrderId}}" wx:if="{{item.UseStatus==8}}">查看详情</button>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class='nohasLog' wx:else bindtap='bindLogin'>
        <image class='noImg' src='../../images/noOrder.png' mode='widthFix' lazy-load='true'></image>
        <view class='langqi'>点击登录后，查看订单</view>
      </view>
    </view>
  </view>

  <!--退款成功提示弹出框-->
  <view class="zan-dialog {{ showSuccess ? 'zan-dialog--show' : '' }}" catchtouchmove="ture">
    <view class="zan-dialog__mask" bindtap="toggleDialog" />
    <view class="zan-dialog__container">
      <view class='zan-title'>退款成功</view>
      <view class='zan-content align-left le'>交易编号：{{OrderSn}}</view>
      <view class='le zan-til'>退款金额：{{PayAmount}}元</view>
      <view class='zan-content align-left le'>退款时间：{{RefundTime}}</view>
      <view class='zan-content align-left le' wx:if="{{!RefundArrivalTime==''}}">到账时间：{{RefundArrivalTime}}</view>
      <view class='know' bindtap='closeded'>知道了</view>
    </view>
  </view>


  <view wx:for="{{popList}}" wx:key wx:for-item="item1">
    <view wx:if="{{item1.pop==true}}">
      <view class='fatherPop' catchtouchmove='true'></view>
      <view class='poFixed'>
        <cover-view class='flex-center'>
          <cover-view class='flexBetween' wx:if="{{item1.ShowClose}}">
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10000?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10000?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10001?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10001?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10002?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10002?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
          </cover-view>
          <cover-view class='flexBetween centered'>
            <cover-image wx:if="{{item1.ShowClose}}" src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10003?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10003?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image src='{{item1.ImgUrlShow}}' style="width:{{windowWidth*item1.ShowImgWidth*1.0/100}}rpx;" data-actiontype="{{item1.ActionType}}" data-actionparams="{{item1.ActionParams}}" mode='aspectFill' data-executeparams="{{item1.ExecuteParams}}" data-popId="{{item1.Id}}"
              bindtap='popclick' data-index="{{index}}" class='hongbao'></cover-image>
            <cover-image wx:if="{{item1.ClosePositionX}}<10000 && item1.ShowClose" src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX<10000?'shutDown':''}}" mode='aspectFill' class='shut' style='top:{{item1.ClosePositionY}}rpx;left:{{item1.ClosePositionX}}rpx;width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image wx:if="{{item1.ShowClose}}" src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10004?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10004?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
          </cover-view>
          <cover-view class='flexBetween' wx:if="{{item1.ShowClose}}">
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10005?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10005?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10006?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10006?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
            <cover-image src='{{item1.CloseImgUrlShow}}' data-index="{{index}}" bindtap="{{item1.ClosePositionX==10007?'shutDown':''}}" mode='aspectFill' class="shuts {{item1.ClosePositionX!=10007?'IsHide':''}}" style='width:{{item1.CloseWidth}}rpx;height:{{item1.CloseHeight}}rpx'></cover-image>
          </cover-view>
        </cover-view>
      </view>
    </view>
  </view>
</movable-area>