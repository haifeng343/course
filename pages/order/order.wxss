page{
  height: 100%;
}
.movie-container{
  display: flex;
  height: 100%;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FFF;
}
.navbar-item{
  flex: 1;
}
swiper{
  height: 100%;
}
.navbar-item-active{
  /* transition: all 0.3s; */
  border-bottom: 6rpx solid #29D9D6;
  color: #000;
}

.movie-content-wrapper{
  height: 100%;
  padding-top: 80rpx;
}
scroll-view{
  height: 100%;
}
.orderList{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.orderItem{
  width: 95%;
  height: auto;
  margin: 30rpx 2.5% 0;
  box-sizing: border-box;
  padding: 30rpx 5%;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.title{
  font-size: 28rpx;
  color: #4A4A4A;
}
.happening{
  font-size: 30rpx;
  color: #606060;
}
.orderContent{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-top: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F5F5F5;
}
.orderImg{
  width: 160rpx;
  margin-right: 20rpx;
}
.Right{
  width: 71%;
}
.name{
    font-size: 30rpx;
}
.money{
  font-size: 28rpx;
  color: #E03433;
}
.address{
  font-size: 28rpx;
}
.icon{
 margin-top: 5rpx;
 margin-left: -5rpx;
}
.test{
  font-size: 24rpx;
  color: #858585;
  overflow: hidden;
  word-break: keep-all;
  text-overflow: ellipsis;
}
.tag{
  font-size: 30rpx;
  color: #818181;
}
.btn{
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #C0C0C0;
  color: #C0C0C0;
  padding: 0 40rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: flex-end;
}
.bottom{
  margin-top: 25rpx;
  display: flex;
  align-items: center;
  z-index: 1;
}

.zan-dialog__mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  background: rgba(0, 0, 0, 0.6);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  text-align: center;
  bottom: 400rpx;
  width: 650rpx;
  height: auto;
  margin-left: 50rpx;
  background: #fff;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
}
.know{
  font-size: 28rpx;
  color: #9FF6F0;
  border-top: 1rpx solid #E0E0E0;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 28rpx;
}
.zan-dialog--show .zan-dialog__container {
  /* transform: translateY(0); */
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
.zan-title{
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.zan-content{
  font-size: 28rpx;
  color: #434343;
  
}










































