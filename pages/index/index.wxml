<!-- 自定义的导航栏 -->
<view class="custom flex_center" style="padding-top:{{statusBarHeight}}px">
  <view class='navTop' bindtap='address'>
    <image class='navImg' src='../../images/address.png' mode='widthFix' lazy-load='true'></image>
    <view>{{locationName}}</view>
  </view>
</view>
<view style="padding-top:{{statusBarHeight+60}}px" class='topInput'>
  <input type='search' class='search' placeholder='新品上架'></input>
</view>
<view class='banner'>
  <swiper bindchange="swiperChange" indicatorDots='{{indicatorDots}}' current='{{current}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' circular='{{circular}}' display-multiple-items='1'>
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <view class='box'>
          <image src='{{item.img}}' mode="widthFix" lazy-load="true"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="dots">
    <block wx:for="{{imgUrls}}" wx:key>
      <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view>
    </block>
  </view>
</view>
<view class='groupList'>
  <view class='groupItem' wx:for="{{groupList}}" wx:for-item="item" wx:key data-id='{{item.SheetId}}' bindtap='groupDetail'>
    <view class='itemImg'>
      <image src="{{item.SheetCoverImg}}" binderror="binding" class='leftImg' mode='widthFix' lazy-load='true'></image>
    </view>
    <view class='itemRight'>
      <view class='title'>{{item.SheetName}}</view>
      <view class='addr'>
        <image src='../../images/ad1.png' class='ad1' mode='widthFix' lazy-load='true'></image>
        <view>{{item.TradingAreaName}}</view>
        <view class='distance'>{{item.TradingAreaDistance}}Km</view>
      </view>
      <view class='time'>活动截止时间：{{item.EndTime}}</view>
      <view class='tagList'>
        <view class='tagItem' wx:for='{{item.TagList}}' wx:for-item="k" wx:key style='background:{{k.TagBgColor}};color:{{k.TagFontColor}}'>{{k.TagName}}</view>
      </view>
      <view class='bottom'>
        <view class='bottom-left'>
          <view class='money'>￥{{item.SheetMinPrice}}</view>
          <view class='integral'>积分抵扣{{item.UseScoreRate}}%</view>
        </view>
        <view class='bottom-right'>
          <view class='number'>已售 {{item.SoldCount}}</view>
          <image src='../../images/go.png' class='go' mode='widthFix'></image>
        </view>
      </view>
    </view>
  </view>
</view>