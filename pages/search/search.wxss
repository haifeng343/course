page{
  background-color: #fff;
}
.searchTop{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}
.topInput {
  width: 80%;
  position: relative;
}
.mt30{
  margin-top: 30rpx;
}

.search {
  width: 95%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-left: 5%;
  padding-right: 10%;
  padding-left: 10%;
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
  background: #F6F6F6;
  border-radius: 40rpx;
  background-image: url('data:image/png;base64,');
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: 5% 50%;
}
.searTxt{
  width: 20%;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.searchHistory,.historyList{
  width: 100%;
  height:auto;
  padding: 0 5%;
  box-sizing: border-box;
}
.histitle{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.delete{
  width: 45rpx;
  height: 45rpx;
}
.historyList{
  padding: 0;
  max-height: 450rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.historyItem{
  font-size: 28rpx;
  padding: 5rpx 15rpx;
  border-radius: 4rpx;
  background-color: #F1F1F1;
  color: #919191;
  margin-right: 30rpx;
  margin-top: 25rpx;
}
.mt40{
  margin-top: 40rpx;
}




.groupList {
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 2.5%;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.groupItem {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  flex-direction: row;
  margin-top: 60rpx;
}

.itemImg {
  width: 35%;
  overflow: hidden;
  margin-right: 15rpx;
}

.leftImg {
  width: 250rpx;
  border-radius: 10rpx;
}

.itemRight {
  width: 64%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.ad1 {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 13rpx;
}

.addr {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin: 15rpx 0;
  font-size: 30rpx;
  color: #5b5b5b;
}

.distance {
  margin: 15rpx 0;
  font-size: 30rpx;
  color: #5b5b5b;
}

.time {
  font-size: 28rpx;
  color: #b1b1b1;
}

.tagList {
  width: 100%;
  overflow-x: scroll;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-bottom: 5rpx;
  margin-top: 15rpx;
}

.tagList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tagItem {
  word-break: keep-all;
  font-size: 24rpx;
  padding: 2rpx 8rpx;
  margin-right: 15rpx;
  margin-top: 0rpx;
  box-sizing: border-box;
}

.bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 15rpx;
}

.bottom-left {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.money {
  font-size: 34rpx;
  color: #ed1c1d;
}

.integral {
  font-size: 24rpx;
  color: #fe7860;
  border: 1rpx solid #fe7860;
  border-radius: 6rpx;
  padding: 2rpx 6rpx;
  height: 34rpx;
  margin-left: 15rpx;
  position: relative;
  top: 3rpx;
}

.bottom-right {
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  color: #aeaeae;
}

.go {
  width: 30rpx;
  position: relative;
  top: 5rpx;
}









