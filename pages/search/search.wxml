<view class='searchTop'>
  <view class='topInput'>
    <input type='search' bindinput='setSearchName' class='search' value='{{SearchName}}' placeholder='团单/课程'></input>
    <image class='clear' bindtap='clear' src='../../images/clear.png' mode='widthFix' lazy-load='true' wx:if="{{noShow}}"></image>
  </view>
  <view class='searTxt' bindtap='search'>搜索</view>
</view>
<view class='searchHistory' wx:if="{{show || groupList.length<=0}}">
  <view class='historyTop between mt30' wx:if="{{searchRecord.length>0}}">
    <view class='histitle'>历史搜索</view>
    <image class='delete' bindtap='deleteHistory' src='../../images/delete.png' mode='widthFix' lazy-load='true'></image>
  </view>
  <view class='historyList'>
    <text class='historyItem' wx:for="{{searchRecord}}" wx:key="{{item}}">{{item.value}}</text>
  </view>
</view>
<view class='searchHistory' wx:if="{{show || groupList.length<=0}}">
  <view class='historyTop'>
    <view class='histitle mt40'>搜索发现</view>
  </view>
  <view class='historyList'>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语语文课</text>
    <text class='historyItem'>英语课</text>
    <text class='historyItem'>英语课</text>
  </view>
</view>
<view class='groupList' wx:if="{{groupList.length>0}}">
  <view class='groupItem' wx:for="{{groupList}}" wx:for-item="item" wx:key data-id='{{item.SheetId}}' bindtap='groupDetail'>
    <view class='itemImg'>
      <image src="{{item.SheetCoverImg}}" binderror="binding" class='leftImg' mode='widthFix' lazy-load='true'></image>
    </view>
    <view class='itemRight'>
      <view class='title'>{{item.SheetName}}</view>
      <view class='addr'>
        <image src='../../images/ad1.png' class='ad1' mode='widthFix' lazy-load='true'></image>
        <view>{{item.TradingAreaName}}</view>
        <view class='distance'>{{item.TradingAreaDistance}}Km</view>
      </view>
      <view class='time'>活动截止时间：{{item.EndTime}}</view>
      <view class='tagList'>
        <view class='tagItem' wx:for='{{item.TagList}}' wx:for-item="k" wx:key style='background:{{k.TagBgColor}};color:{{k.TagFontColor}}'>{{k.TagName}}</view>
      </view>
      <view class='bottom'>
        <view class='bottom-left'>
          <view class='money'>￥{{item.SheetMinPrice}}</view>
          <view class='integral'>积分抵扣{{item.UseScoreRate}}%</view>
        </view>
        <view class='bottom-right'>
          <view class='number'>已售 {{item.SoldCount}}</view>
          <image src='../../images/go.png' class='go' mode='widthFix'></image>
        </view>
      </view>
    </view>
  </view>
</view>
