<view wx:if="{{BaseList.length>0}}">
  <view class='ruleList' wx:for="{{BaseList}}" wx:key>
    <view class='item'>
      <view class='title'>
        <view class='name'>{{item.TradingAreaName}}</view>
        <view class='orderSn'>订单号: {{item.OrderSn}}</view>
      </view>
      <view class='content'>
        <view class='ItemList'>
          <view class='ItemTxt' wx:for="{{item.BaseList}}" wx:key wx:for-item="k">{{k}}</view>
        </view>
        <view class='ItemList'>
          <view class='ItemTxt black'>特殊奖励:</view>
          <view class='ItemTxt' wx:for="{{item.SpecialList}}" wx:key wx:for-item="f">{{f}}</view>
        </view>
      </view>
      <view class='footer'>
        <view>
          <span>合计可获<span wx:if="{{item.PrizeAmount>0}}">奖励金<span class="red">￥{{item.PrizeAmount}}</span></span>
            <span wx:if="{{item.VoucherCount>0}}"><span wx:if="{{item.PrizeAmount>0}}">，</span>报名代金券<span class="red">{{item.VoucherCount}}</span>张</span>
          </span>
        </view>
      </view>
    </view>
  </view>
</view>
<view class='nohasLog' wx:else>
  <image class='noImg' src='../../images/zanwu.png' mode='widthFix' lazy-load='true'></image>
  <view>暂无规则详情</view>
</view>