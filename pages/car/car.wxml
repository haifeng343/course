<view>
  <scroll-view scroll-y="true">
    <view class='bg'>
      <view class='keep keep1' wx:for="{{List}}" wx:key>
        <view class='keep pd0'>
          <view class='between'>
          <view class='startd che1'>
            <checkbox class='gou'></checkbox>
            <view class='groupName'>{{item.SheetModel==1?item.SheetName:item.TradingareaName}}</view>
            <view class='centers'>
              <image src='../../images/go.png' class='go' mode='apsectFill'></image>
            </view>
          </view>
          <view class='centers del'>
            <image src='../../images/delete.png' data-index="{{index}}" data-Id="{{item.CartId}}" bindtap='deleteCard' class='delete' mode='aspectFill'></image>
          </view>
          </view>

          <view>
            <view class='Item' wx:for="{{item.ItemList}}" wx:key wx:for-item="item1">
              <view class='leftImg'>
                <image src='{{item1.ItemCoverImg}}' mode='apsectFill' class='topImg'></image>
              </view>
              <view class='rights'>
                <view class='course'>{{item1.ItemName}}</view>
                <view>{{item1.ItemDes==null?'暂无课程简介':item1.ItemDes}}</view>
                <view>课程数量 {{item1.CoursesNumber}} 1节，单节课时 1{{item1.SingleTime}} min</view>
                <view>{{item1.SoldCount}}1人已参与 | 剩余名额 {{item1.RemainCount}} 1个</view>
              </view>
            </view>
          </view>

        </view>
        <view class='flex-end count'>
          <view>共{{ItemList.length}}2门课程</view>
          <view class='money'>小计:</view>
          <view class='numberD'>￥{{TotalAmount}}100</view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

