.banner {
  width: 100%;
  height: 285rpx;
  position: relative;
  z-index: 0;
  background-color: #fff;
}

swiper {
  height: 100%;
}

swiper-item {
  text-align: center;
}

.img1 {
  width: 96%;
  height: 100%;
  object-fit: cover;
  border-radius: 15rpx;
}

.box {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  display: inline-block;
  box-sizing: border-box;
}

.dot {
  position: absolute;
  bottom: 8rpx;
  right: 52rpx;
  background: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 24rpx;
  border-radius: 40rpx;
  padding: 3rpx 20rpx;
}

.courseCont {
  background-color: #fff;
  padding-bottom: 15rpx;
  padding-top: 40rpx;
}

.courseLi {
  font-size: 32rpx;
  line-height: 45rpx;
}

.name {
  font-weight: 600;
}

.howMoney {
  color: #f8000f;
  font-size: 32rpx;
}

.somebody {
  font-size: 28rpx;
  color: #5b5b5b;
  margin: 10rpx 0;
}

.courseRow {
  width: 100%;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}

.courseRow:last-child {
  border: none;
}

.rowImg {
  width: 40rpx;
  height: 34rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}

.courseRow .start {
  width: 100%;
}

.address {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  height: 60rpx;
}

button {
  padding: 0;
}

.end {
  display: flex;
  justify-content: flex-end;
}

.prompt {
  margin-top: 20rpx;
}

.prompTitle {
  font-size: 32rpx;
  font-weight: 600;
}

.promptText {
  font-size: 28rpx;
  line-height: 35rpx;
  letter-spacing: 2rpx;
  margin-top: 20rpx;
}

.teacherList {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.tearcherTitle {
  margin-bottom: 20rpx;
}

.teaNumber {
  font-size: 32rpx;
  font-weight: 600;
}

.go {
  position: relative;
  top: 8rpx;
}

.teaList {
  display: flex;
  flex-direction: row;
  width: 100%;
  overflow-x: scroll;
}

.teaList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.teachers {
  width: 200rpx;
  margin-right: 25rpx;
  text-align: center;
  word-break: keep-all;
}

.teaImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.teaName {
  font-size: 28rpx;
}

.profession {
  color: #656565;
  font-size: 26rpx;
  word-break: keep-all;
}
