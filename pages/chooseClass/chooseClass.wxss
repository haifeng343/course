.title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 15rpx;
  background-color: #fff;
  font-size: 30rpx;
}

.courseList {
  background-color: #fff;
  width: 100%;
  height: auto;
  padding: 0 5%;
  box-sizing: border-box;
}

.courseItem {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #fbfbfb;
}

.courseItem:last-child {
  border-bottom: none;
}

.courseItem .title {
  text-align: center;
  color: #8d8d8d;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 40rpx 0;
}

.check {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.courseCont {
  width: 100%;
  height: auto;
  margin: 15rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.leftImg {
  width: 33%;
  height: auto;
  overflow: hidden;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.cover {
  width: 210rpx;
}

.rightContent {
  width: 67%;
}

.courseTitle {
  font-size: 28rpx;
  font-weight: 600;
}

.coursePeople {
  font-size: 24rpx;
  color: #8d8d8d;
  line-height: 40rpx;
}

.tagList {
  width: 100%;
  overflow-x: scroll;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.tagList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.relative {
  position: relative;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  position: absolute;
  top: 22rpx;
}

.tagItm {
  word-break: keep-all;
  font-size: 24rpx;
  padding: 2rpx 8rpx;
  margin-right: 15rpx;
  margin-top: 0rpx;
  box-sizing: border-box;
}

.detail {
  display: flex;
  justify-content: flex-start;
}

.detailImg {
  width: 30rpx;
  position: relative;
  top: 6rpx;
  display: flex;
  right: 5rpx;
  justify-content: flex-start;
}

.name {
  font-size: 24rpx;
  color: #767676;
  line-height: 40rpx;
}

.addrLong {
  width: 80%;
  display: flex;
  justify-content: flex-start;
}

.long {
  width: 20%;
  text-align: right;
  color: #8d8d8d;
}

.around {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.address {
  width: 90%;
  word-break: keep-all;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #404040;
}

.ring {
  display: flex;
  justify-content: flex-start;
  margin-right: 25rpx;
}

.disclaimerList {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 15rpx;
}

.disTitle {
  font-size: 32rpx;
  font-weight: 700;
  padding-top: 30rpx;
  margin-left: 5%;
}

.disContent {
  width: 90%;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-left: 5%;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.pay {
  font-size: 26rpx;
}

.again {
  color: #9b9b9b;
}

.el {
  height: 120rpx;
  display: flex;
  align-items: center;
}

.totalNumber {
  line-height: 120rpx;
  margin-right: 30rpx;
}

.paybtn {
  background-color: #29d9d6;
  color: #fff;
  font-size: 26rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  margin-top: 30rpx;
}

.kl .total {
  margin-top: 30rpx;
}

.payMoney {
  font-size: 32rpx;
  color: #e93a37;
  font-weight: 600;
}

.symbol {
  font-size: 24rpx;
}