<view class='title'>
  共{{detailCent.TotalItemCount}}门课程，<text>最少{{detailCent.MinItemCount}}门，</text><text>最多{{detailCent.MaxItemCount}}门，</text>仅需{{detailCent.MaxPrice}}元!</view>
<view class='courseList'>
  <view class='courseItem' wx:for='{{GroupList}}' wx:key>
    <view class='check'>{{item.GroupName}}</view>
    <checkbox-group bindchange='checkedTap' data-index='{{index}}'>
      <view class='courseCont' wx:for="{{item.ItemList}}" wx:for-item="k" wx:for-index='index1' wx:key>
        <view class='leftImg'>
          <image class='cover' src='{{k.ItemCoverImg}}' mode='widthFix' lazy-load='true'></image>
        </view>
        <view class='rightContent'>
          <view class='between relative'>
            <view class='courseTitle'>{{k.ItemName}}</view>
            <view>
              <checkbox value='{{k.RelId}}' disabled='{{item.disabled[index1] == k.RelId}}'></checkbox>
            </view>
          </view>
          <view class='coursePeople'>{{k.SoldCount}}人已参与 | 剩余名额 {{k.RemainCount}} 个</view>
          <view class='tagList'>
            <view class='tagItm' wx:for="{{k.TagList}}" wx:key wx:for-item="l" style='background:{{l.TagBgColor}};color:{{l.TagFontColor}}'>{{l.TagName}}</view>
          </view>
          <view class='detail'>
            <image class='detailImg' src='../../images/house.png' mode='widthFix' lazy-load='true'></image>
            <view class='name'>{{k.SellerName}}</view>
          </view>
          <view class='detail around'>
            <view class='addrLong'>
              <image class='detailImg' src='../../images/ad1.png' mode='widthFix' lazy-load='true'></image>
              <view class='name address'>{{k.StoreAddress}}</view>
            </view>
            <view class='long'>{{k.Distance}}km</view>
          </view>
          <view class='detail'>
            <image class='detailImg' src='../../images/call.png' mode='widthFix' lazy-load='true'></image>
            <view class='name'>{{k.Mobile}}</view>
          </view>
          <view class='detail'>
            <view class='ring'>
              <image class='detailImg' src='../../images/couse.png' mode='widthFix' lazy-load='true'></image>
              <view class='name'>共有{{k.CoursesNumber}}节课</view>
            </view>
            <view class='ring'>
              <image class='detailImg' src='../../images/time.png' mode='widthFix' lazy-load='true'></image>
              <view class='name'>单节课时 {{k.SingleTime}} min</view>
            </view>
          </view>
        </view>
      </view>
    </checkbox-group>
  </view>
</view>
<view class='pay between'>
  <view class='el' wx:if="{{Remark==''}}">
    <view class='total'>共{{detailCent.TotalItemCount}}门课程</view>
  </view>
  <view class='kl' wx:else>
    <view class='total'>共{{detailCent.TotalItemCount}}门课程</view>
    <view class='again'>{{Remark}}</view>
  </view>
  <view class='flex-end'>
    <view class='totalNumber' wx:if="{{TotalPrice==-1}}">合计:暂无价格</view>
    <view class='totalNumber start' wx:else>合计:<view class='payMoney start'><view class='symbol'>￥</view>{{TotalPrice}}</view></view>
    <button class='paybtn' bindtap='paybtn' disabled='{{TotalPrice==-1}}'>确认购买</button>
  </view>
</view>