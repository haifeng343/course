.tip {
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  padding: 0 5%;
  box-sizing: border-box;
}

.kep {
  font-size: 30rpx;
  width: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.kep .start {
  width: 92%;
}

.kep input {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 25rpx;
}

.Description {
  width: 50rpx;
  margin-top: 25rpx;
}

.zan-til {
  font-size: 30rpx;
  text-align: center;
  margin: 15rpx 0;
}

.next {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 60rpx;
  background-color: #29d9d6;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.keps {
  font-size: 30rpx;
  width: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
}
.keps .start{
  width: 72%;
}
.keps input{
  width: 45%;
  height: 60rpx;
  margin-top: 10rpx;
  line-height: 60rpx;
  padding-left: 25rpx;
  border: none;
  border-bottom: 1rpx solid #f9f9f9;
}
.code{
  margin-left: 30rpx;
}
.imgCoded{
  border: 1rpx solid #29d9d6;
  color: #29d9d6;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 5rpx;
  border-radius: 4rpx;
  position: relative;
  bottom: -20rpx;
}
.imgLoad{
  font-size: 24rpx;
  height: 40rpx;
  color: #D5D5D5;
  line-height: 40rpx;
  position: relative;
  bottom: -25rpx;
  padding: 5rpx 2rpx;
  border: 1rpx solid #D5D5D5;
}
.end{
  background-color: #fff;
  font-size: 24rpx;
  color: #E1E1E1;
  display: flex;
  justify-content: flex-end;
  padding-right: 5%;
  padding-bottom: 20rpx;
}