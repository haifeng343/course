<view class='logTop between'>
  <view class='start'>
    <picker mode="multiSelector" value="{{date2}}"  range='{{array}}' fields="month" bindchange="bindDateChange">
        <view class="picker">
          {{date?date:now}}
        </view>
      </picker>
    <image src='../../images/select.png' class='select' mode='widthFix' lazy-load='true'></image>
  </view>
  <view class='math'>
    <!-- <view>支出:100</view>
    <view>收入:1200</view> -->
  </view>
</view>
<view class='log'>
  <view class='nohasLog' wx:if="{{List.length<=0}}">
  <image class='noImg' src='../../images/zanwu.png' mode='widthFix' lazy-load='true'></image>
  <view>暂无余额变更记录</view>
</view>
  <view class='logList' wx:else>
    <view class='logItem column' wx:for="{{List}}" wx:key bindtap='withdrawDetail'>
      <view class='between'>
        <view class='share'>{{item.Description}}</view>
        <view class='fraction'>￥{{item.ChangeAmount}}</view>
      </view>
      <view class='between'>
        <view class='time'>{{item.CreateTime}}</view>
        <view class='status'>{{item.ChangeAmountBefore}}</view>
      </view>
    </view>
  </view>
</view>