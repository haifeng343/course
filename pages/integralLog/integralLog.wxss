}
.mtops{
  width: 100%;
  position: fixed;
  background-color: #ECECEC;
  height: 230rpx;
  top: 0;
}
.mTop{
  width: 95%;
  background-color: #fff;
  margin: 20rpx 2.5%;
  padding: 40rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}
.mTopImg{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}
.Balance{
  font-size: 28rpx;
  color: #747474;
}
.money{
  font-size: 32rpx;
}
.integral{
  width: 95%;
  height: auto;
  margin: 20rpx 2.5%;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.avator{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.integralTop{
  font-size: 28rpx;
  padding-top: 35rpx;
}
.number{
  font-size: 32rpx;
  font-weight: 600;
}
.rule{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #9F9F9F;
}
.log{
  width: 100%;
  background-color: #fff;
  padding: 0 5%;
  box-sizing: border-box;
  margin-top: 290rpx;
}
.logTop{
  width: 100%;
  font-size: 28rpx;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 5%;
  position: fixed;
  z-index: 999;
  top: 230rpx;
  background-color: #e9e9e9;
}
.go{
  margin-top: 6rpx;
}
.math{
  font-size: 24rpx;
  color: #2F2F2F;
}
.logList{
  width: 100%;
  height: auto;
  font-size: 32rpx;
}
.logItem{
  border-top: 1rpx solid #F9F9F9;
  border-bottom: 1rpx solid #F9F9F9;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
}
.time{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #717171;
}
.fraction{
  line-height:90rpx;
}














