<view>
  <view class='integral between'>
    <view class='start'>
      <image class='avator' src='{{avator}}' mode='widthFix' lazy-load='true'></image>
      <view class='integralTop'>
        <view>积分总额</view>
        <view class='number'>{{score}}</view>
      </view>
    </view>
    <view class='rule'>积分规则</view>
  </view>

  <view class='log'>
    <view class='logTop between'>
      <view class='start'>
        <picker mode="multiSelector" value="{{date}}" range='{{array}}' start="{{dataStart}}" end="{{dataEnd}}" fields="month" bindchange="bindDateChange">
          <view class="picker">
            {{date?date:now}}
          </view>
        </picker>
        <image src='../../images/go.png' class='go' mode='widthFix' lazy-load='true'></image>
      </view>
      <!-- <view class='math'>
        <view>增加:100</view>
        <view>减少:1200</view>
      </view> -->
    </view>
    <view class='nohasLog' wx:if="{{List.length<=0}}">
      <image class='noImg' src='../../images/zanwu.png' mode='widthFix' lazy-load='true'></image>
      <view>暂无积分记录</view>
    </view>
    <view class='logList' wx:else>
      <view class='logItem between' wx:for="{{List}}" wx:key>
        <view class='itemLeft'>
          <view>{{item.Description}}</view>
          <view class='time'>{{item.CreateTime}}</view>
        </view>
        <view class='fraction'>{{item.ChangeAmount}}</view>
      </view>
