.content {
  width: 100%;
  height: auto;
  box-sizing: border-box;
}
 
.phone-box {
  width: 100%;
  height: 89rpx;
  padding: 0 5% 0 0;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.Input{
  background-color: #fff;
  height: auto;
  padding-bottom: 20rpx;
}
 
.phone {
  height: 89rpx;
  line-height: 89rpx;
  padding-left: 5%;
  box-sizing: border-box;
  background: #fff;
  color: #333;
  padding-right: 60rpx;
  font-size: 28rpx;
}
 
.number {
  color: #333;
  font-size: 28rpx;
  width: 200rpx;
}
 
.getNum {
  width:210rpx;
  height:48rpx;
  border: 1rpx solid #29D9D6;
  color: #29D9D6;
  border-radius:8rpx;
  font-size:28rpx;
  line-height:48rpx;
  text-align:center;
  position: absolute;
  right: 5%;
}
 
.submit {
  width: 95%;
  border-radius: 45rpx;
  height: 80rpx;
  background: #29D9D6;
  margin-top: 80rpx;
  color: #fff;
  font-size: 32rpx;
}
.cha{
  width: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.dialog-title{
  text-align: center;
}
.hascode{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  top: 40rpx;
}
.InputCode{
  border: 1rpx solid #f9f9f9;
  height: 80rpx;
  padding-left: 15rpx;
  font-size: 30rpx;
}
.codeImg{
  width: 159rpx;
  position: absolute;
  top: 1rpx;
  right: 1rpx;
}
.sure{
  width: 90%;
  background-color: #29D9D6;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 5%;
  bottom: 20rpx;
}
.dialog--hide{
  display: none;
}
.dialog--show{
  display: show;
}
