page{
  width: 100%;
  height: 100%;
}
.topbg {
  width: 100%;
  height: 400rpx;
  background-color: #29d9d6;
}

.content {
  width: 90%;
  box-sizing: border-box;
  padding-bottom: 40rpx;
  background-color: #fff;
  position: absolute;
  top: 80rpx;
  left: 5%;
  border-radius: 45rpx;
  font-size: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.contentTop {
  border-bottom: 1rpx solid #f4f4f4;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.header {
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-start;
}

.avator {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.center {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.Tname {
  font-size: 32rpx;
  line-height: 50rpx;
}

.old {
  font-size: 28rpx;
  line-height: 40rpx;
}

.cenTen {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  line-height: 40rpx;
}
.cenTenLast{
  height: 100%;
  overflow-y: scroll; 
}

.title {
  width: 150rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.title1{
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.centerd{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}
.startd {
  display: flex;
  justify-content: flex-start;
}

.txt {
  width: 70%;
  max-height: 150rpx;
  overflow-y: scroll;
}

.w100 {
  width: 100%;
  white-space: pre-wrap;
  word-break: keep-all;
}

.storeList {
  width: 100%;
  height: auto;
  overflow-y: scroll;
  margin-top: 20rpx;
  
}

.courseCont:first-child {
  margin-top: 0;
}

.courseCont {
  width: 100%;
  position: relative;
  height: auto;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f4f4f4;
}

.courseCont:last-child {
  border: none;
}

.coverd {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
}

.rightContent {
  width: 70%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.courseTitle {
  width: 93%;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: bold;
}

.detail {
  display: flex;
  justify-content: flex-start;
}

.detailImg {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.name {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #5b5b5b;
  line-height: 36rpx;
}

.centers {
  display: flex;
  align-items: center;
}
