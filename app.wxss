page {
  overflow-x: hidden;
  background-color: #eee;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

button::after {
  border: 0;
}

button {
  background-color: #fff;
  padding: 0;
}

.button-hover {
  color: #000;
  background-color: #fff;
}

.between {
  display: flex;
  justify-content: space-between;
}

.start {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.well {
  background-color: #fff;
  height: auto;
  padding: 0 5%;
}

.boxd {
  width: 100%;
  padding: 30rpx 5%;
  box-sizing: border-box;
  background-color: #fff;
}

.go {
  width: 30rpx;
}
radio .wx-radio-input {
  /* 自定义样式.... */
  height: 46rpx;
  width: 46rpx;
  border-radius: 50%;
  background: url('data:image/png;base64,');
  background-position: center;
  background-repeat: no-repeat;
  background-size: 52rpx 52rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
 width: 70rpx;
 height: 70rpx;
 display: flex;
 align-items: center;
 justify-content: center;
 margin: 0 auto;
 text-align: center;
 border-radius: 100%;
background-color: #2BD8D7;
}
.pay{
  position: fixed;
  z-index: 1;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  box-shadow: 0 -3rpx 10rpx rgba(0,0,0,0.2);
  padding: 0 30rpx;
  box-sizing: border-box;
}
.flex-end{
  display: flex;
  justify-content: flex-end;
}